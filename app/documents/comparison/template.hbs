<table class="table table-hover">
    {{#if selectedAttribute}}
        <caption>
            <span>{{selectedAttribute}}</span>
            <button
                {{action 'selectAttribute' null}}
                class="btn btn-danger btn-xs"
            >
                Clear
            </button>
        </caption>
    {{/if}}
    <thead>
        <tr>
            {{#unless selectedAttribute}}<th>Key</th>{{/unless}}
            {{#each selectedVersions as |version|}}
            <th>{{version.document.name}} - {{moment-format version.timestamp}}</th>
            {{/each}}
        </tr>
    </thead>
    <tbody>
        {{#each comparisons as |comparison|}}
        <tr>
            <td>{{comparison.key}}</td>
            {{#each comparison.diffs as |diff|}}
                {{#if diff.isChanged}}
                    <td class="warning">{{diff.value}}</td>
                {{else}}
                    <td>{{diff.value}}</td>
                {{/if}}
            {{/each}}
        </tr>
        {{/each}}
    </tbody>
</table>
